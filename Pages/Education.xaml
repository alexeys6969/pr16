<Page x:Class="Submission_of_Applications_Shashin.Pages.Education"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Shashin.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Education">

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Height="40" Width="40" Source="\Resources\logo.png" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,10,10,10">
                <Label Content="Электронная приемная кампания" FontWeight="Bold" FontSize="19"/>
                <Label Content="Пермского авиационного техникума им. А. Д. Швецова"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Сведения об образовании" FontWeight="Bold" Margin="0,0,0,20"/>

                <Label Grid.Row="1" Content="База:" Margin="0,0,0,5"/>
                <Label Grid.Row="2" Content="Выберите один из вариантов:" Background="{x:Null}" FontSize="10" Foreground="Red" Margin="10,0,0,10"/>

                <RadioButton x:Name="RB1" GroupName="EduBase" Grid.Row="3" Content="9 классов" Margin="10,0,0,5"/>
                <RadioButton x:Name="RB2" GroupName="EduBase" Grid.Row="4" Content="11 классов" Margin="10,0,0,5"/>
                <RadioButton x:Name="RB3" GroupName="EduBase" Grid.Row="5" Content="СПО" Margin="10,0,0,5"/>
                <RadioButton x:Name="RB4" GroupName="EduBase" Grid.Row="6" Content="ВПО" Margin="10,0,0,20"/>

                <Label Grid.Row="7" Content="Выберите один из вариантов:" Background="{x:Null}" FontSize="10" Foreground="Red" Margin="10,0,0,10"/>
                <RadioButton x:Name="RB5" GroupName="EduDoc" Grid.Row="8" Content="Аттестат" Margin="10,0,0,5"/>
                <RadioButton x:Name="RB6" GroupName="EduDoc" Grid.Row="9" Content="Диплом" Margin="10,0,0,20"/>

                <Grid Grid.Row="10" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Серия и номер документа об образовании:"/>
                    <Label Grid.Column="2" Content="Средний балл (до сотых, через запятую):"/>
                </Grid>

                <Grid Grid.Row="11" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SeriesAndNumberPassport" Grid.Column="0" Height="24"/>
                    <TextBox x:Name="AverageGrade" Grid.Column="2" Height="24"/>
                </Grid>

                <Label Grid.Row="12" Content="Прикрепите сканы страниц документа об образовании с Ф.И.О., наименованием образовательной организации и оценками" Margin="0,0,0,5"/>
                <Label Grid.Row="13" Content="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" Background="{x:Null}" FontSize="10" Foreground="Red" Margin="10,0,0,5"/>

                <Grid Grid.Row="14" Margin="10,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Height="24" Margin="0,0,10,0"/>
                    <Button Grid.Column="1" Content="Выбрать ..." Width="75" Height="25"/>
                </Grid>

                <Button Grid.Row="15" Content="Продолжить" HorizontalAlignment="Right" Width="150" Height="25" Click="Navigation"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
