<Page x:Class="Submission_of_Applications_Shashin.Pages.Education"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Shashin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Education">

    <Grid Background="#F8F9FA">
        <Grid Margin="0,0,0,349.6" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="\Resources\logo.png"/>
            <Label Content="Электронная приемная кампания" HorizontalAlignment="Left" Margin="55,1,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="Пермского авиационного техникума им. А. Д. Швецова" HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Margin="0,60,0,-0.4">
            <Label Content="Сведения об образовании" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="База:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
            <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" Margin="20,67,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
            <RadioButton Content="9 классов" HorizontalAlignment="Left" Margin="22,91,0,0" VerticalAlignment="Top"/>
            <RadioButton Content="11 классов" HorizontalAlignment="Left" Margin="22,106,0,0" VerticalAlignment="Top"/>
            <RadioButton Content="СПО" HorizontalAlignment="Left" Margin="22,121,0,0" VerticalAlignment="Top"/>
            <RadioButton Content="ВПО" HorizontalAlignment="Left" Margin="22,136,0,0" VerticalAlignment="Top"/>

            <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" Margin="22,158,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
            <RadioButton Content="Аттестат" HorizontalAlignment="Left" Margin="22,181,0,0" VerticalAlignment="Top"/>
            <RadioButton Content="Диплом" HorizontalAlignment="Left" Margin="22,196,0,0" VerticalAlignment="Top"/>



            <Button Content="Продолжить" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="150" Height="25"/>
            <Label Content="Серия и номер документа об образовании:" HorizontalAlignment="Left" Margin="10,214,0,0" VerticalAlignment="Top" Width="350"/>
            <TextBox HorizontalAlignment="Left" Margin="10,245,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="350" Height="24"/>
            <Label Content="Средний балл (до сотых):" HorizontalAlignment="Right" Margin="0,214,10,0" VerticalAlignment="Top" Width="350"/>
            <TextBox HorizontalAlignment="Right" Margin="0,245,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="350" Height="24"/>
            <Label Content="Прикрепите сканы страниц документа об образовании с Ф.И.О., наименованием образовательной организации и оценками" Margin="10,275,10,90"/>
            <Label Content="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" HorizontalAlignment="Left" Margin="20,305,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
            <TextBox HorizontalAlignment="Left" Margin="20,328,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  Height="24" Width="690"/>
            <Button Content="Выбрать ..." HorizontalAlignment="Right" Margin="0,0,10,38" VerticalAlignment="Bottom" Width="75" Height="25"/>

        </Grid>
    </Grid>
</Page>
