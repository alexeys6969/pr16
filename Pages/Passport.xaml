<Page x:Class="Submission_of_Applications_Shashin.Pages.Passport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Shashin.Pages"
      mc:Ignorable="d" 
      d:DesignWidth="800"
      Title="Passport">

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Height="40" Width="40" Source="\Resources\logo.png" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,10,10,10">
                <Label Content="Электронная приемная кампания" FontWeight="Bold" FontSize="19"/>
                <Label Content="Пермского авиационного техникума им. А. Д. Швецova"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Паспортные данные" FontWeight="Bold" Margin="0,0,0,20"/>

                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Фамилия:"/>
                    <Label Grid.Column="2" Content="Имя:"/>
                    <Label Grid.Column="4" Content="Отчество:"/>
                </Grid>

                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="Name" Grid.Column="0" Height="24"/>
                    <TextBox x:Name="FirstName" Grid.Column="2" Height="24"/>
                    <TextBox x:Name="LastName" Grid.Column="4" Height="24"/>
                </Grid>

                <Label Grid.Row="3" Content="Дата рождения:" Margin="0,0,0,5"/>
                <TextBox x:Name="DateOfBirth" Grid.Row="4" Height="24" Margin="0,0,0,15"/>

                <Label Grid.Row="5" Content="Гражданство:" Margin="0,0,0,5"/>
                <TextBox x:Name="Сitizenship" Grid.Row="6" Height="24" Margin="0,0,0,15"/>

                <Label Grid.Row="7" Content="Место рождения:" Margin="0,0,0,5"/>
                <TextBox x:Name="PlaceOfBirth" Grid.Row="8" Height="24" Margin="0,0,0,20"/>

                <Grid Grid.Row="9" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Серия и номер паспорта:"/>
                    <Label Grid.Column="2" Content="Дата выдачи:"/>
                    <Label Grid.Column="4" Content="Код подразделения:"/>
                </Grid>

                <Grid Grid.Row="10" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SeriesAndNumber" Grid.Column="0" Height="24"/>
                    <TextBox x:Name="DateOfIssued" Grid.Column="2" Height="24"/>
                    <TextBox x:Name="DepartamentCode" Grid.Column="4" Height="24"/>
                </Grid>

                <Label Grid.Row="11" Content="Кем выдан:" Margin="0,0,0,5"/>
                <TextBox x:Name="Issued" Grid.Row="12" Height="24" Margin="0,0,0,20"/>

                <Grid Grid.Row="13" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Адрес по прописке:"/>
                    <Label Grid.Column="2" Content="Район:"/>
                </Grid>

                <Grid Grid.Row="14" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="RegisteredAddress" Grid.Column="0" Height="24"/>
                    <TextBox x:Name="District" Grid.Column="2" Height="24"/>
                </Grid>

                <Grid Grid.Row="15" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Адрес проживания фактический:"/>
                    <Label Grid.Column="2" Content="Район:"/>
                </Grid>

                <Grid Grid.Row="16" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="FacticAddress" Grid.Column="0" Height="24"/>
                    <TextBox x:Name="FacticDisrtict" Grid.Column="2" Height="24"/>
                </Grid>

                <Label Grid.Row="17" Content="Прикрепите сканы страниц паспорта с фотографией и действующей пропиской" Margin="0,0,0,5"/>
                <Label Grid.Row="18" Content="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" Background="{x:Null}" FontSize="10" Foreground="Red" Margin="10,0,0,5"/>

                <Grid Grid.Row="19" Margin="10,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Height="24" Margin="0,0,10,0"/>
                    <Button Grid.Column="1" Content="Выбрать ..." Width="94" Height="25"/>
                </Grid>

                <Button Grid.Row="20" Content="Продолжить" HorizontalAlignment="Right" Width="150" Height="25" Click="Navigation"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
