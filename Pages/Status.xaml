<Page x:Class="Submission_of_Applications_Shashin.Pages.Status"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Shashin.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Status">

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Height="40" Width="40" Source="\Resources\logo.png" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,10,10,10">
                <Label Content="Электронная приемная кампания" FontWeight="Bold" FontSize="19"/>
                <Label Content="Пермского авиационного техникума им. А. Д. Швецова"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Статус" FontWeight="Bold" Margin="0,0,0,10"/>
                <Label Grid.Row="1" Content="Имею статус:" Margin="0,0,0,5"/>
                <Label Grid.Row="2" Content="Отметить при наличии" Background="{x:Null}" FontSize="10" Foreground="Red" Margin="10,0,0,10"/>

                <CheckBox Grid.Row="3" Content="ребенок-сирота/ребенок, оставшийся без попечения родителей" Margin="10,0,0,5"/>
                <CheckBox Grid.Row="4" Content="инвалид" Margin="10,0,0,5"/>
                <CheckBox Grid.Row="5" Content="малообеспеченный" Margin="10,0,0,20"/>

                <Label Grid.Row="6" Content="Приписное удостоверение (военный билет)" Margin="0,10,0,5"/>
                <Label Grid.Row="7" Content="Выберите один из вариантов:" Background="{x:Null}" FontSize="10" Foreground="Red" Margin="10,0,0,10"/>

                <RadioButton Grid.Row="8" Content="имею (при нажатии данной кнопки необходимо ниже прикрепить сканы страниц документа)" Margin="10,0,0,5"/>
                <RadioButton Grid.Row="9" Content="не имею" Margin="10,0,0,20"/>

                <Label Grid.Row="10" Content="Прикрепите сканы 1-ой и 2-ой страниц приписного удостоверения или военного билета (стр. 1-5, 8-13, 20-21) при их наличии" Margin="0,10,0,5"/>
                <Label Grid.Row="11" Content="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" Background="{x:Null}" FontSize="10" Foreground="Red" Margin="10,0,0,5"/>

                <Grid Grid.Row="12" Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Height="24" Margin="0,0,10,0"/>
                    <Button Grid.Column="1" Content="Выбрать ..." Width="75" Height="25"/>
                </Grid>

                <Button Grid.Row="13" Content="Продолжить" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150" Height="25" Margin="0,20,0,0" Click="Navigation"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
