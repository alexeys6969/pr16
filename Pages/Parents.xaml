<Page x:Class="Submission_of_Applications_Shashin.Pages.Parents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Shashin.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Parents" Background="#F8F9FA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="White" Padding="15,10" BorderThickness="0,0,0,1" BorderBrush="LightGray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Height="45" Width="45" Source="/Resources/logo.png" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Электронная приемная кампания" FontWeight="Bold" FontSize="18"/>
                    <TextBlock Text="Пермского авиационного техникума им. А. Д. Швецова" FontSize="13" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Контент -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" Background="White">

                <!-- Заголовок -->
                <TextBlock Text="Сведения о родителях (законных представителях)" 
                      FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                <TextBlock Text="Выберите один из вариантов:" 
                      FontSize="11" Foreground="Red" Margin="0,0,0,20"/>

                <!-- Секция МАТЬ -->
                <TextBlock Text="Мать (или законный представитель)" 
                      FontStyle="Italic" FontSize="15" Margin="0,0,0,10"/>

                <TextBlock Text="Фамилия, имя, отчество (полностью)" Margin="0,0,0,5"/>
                <TextBox x:Name="FIOM" Height="24" Margin="0,0,0,15"/>

                <TextBlock Text="Дата рождения:" Margin="0,0,0,5"/>
                <TextBox x:Name="DOBM" Height="24" Margin="0,0,0,15"/>

                <TextBlock Text="Место работы:" Margin="0,0,0,5"/>
                <TextBox x:Name="POWM" Height="24" Margin="0,0,0,15"/>

                <TextBlock x:Name="JTM" Text="Должность:" Margin="0,0,0,5"/>
                <TextBox Height="24" Margin="0,0,0,15"/>

                <TextBlock Text="Место жительства:" Margin="0,0,0,5"/>
                <TextBox x:Name="POLM" Height="24" Margin="0,0,0,15"/>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Домашний телефон:" Margin="0,0,0,5"/>
                        <TextBlock Text="(при наличии)" FontSize="10" Foreground="Red" Margin="15,0,0,5"/>
                        <TextBox x:Name="HPM" Height="24"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Мобильный телефон:" Margin="0,0,0,5"/>
                        <TextBlock Text="(при наличии)" FontSize="10" Foreground="Red" Margin="15,0,0,5"/>
                        <TextBox x:Name="MPM" Height="24"/>
                    </StackPanel>
                </Grid>

                <CheckBox x:Name="CB1" Content="Настоящим подтверждаю, что персональные данные передаются третьим лицам" 
                     Margin="0,10,0,25" FontSize="12"/>

                <!-- Секция ОТЕЦ -->
                <TextBlock Text="Отец (или законный представитель)" 
                      FontStyle="Italic" FontSize="15" Margin="0,20,0,10"/>

                <TextBlock Text="Фамилия, имя, отчество (полностью)" Margin="0,0,0,5"/>
                <TextBox x:Name="FIOF" Height="24" Margin="0,0,0,15"/>

                <TextBlock Text="Дата рождения:" Margin="0,0,0,5"/>
                <TextBox x:Name="DOBF" Height="24" Margin="0,0,0,15"/>

                <TextBlock Text="Место работы:" Margin="0,0,0,5"/>
                <TextBox x:Name="POWF" Height="24" Margin="0,0,0,15"/>

                <TextBlock Text="Должность:" Margin="0,0,0,5"/>
                <TextBox x:Name="JTF" Height="24" Margin="0,0,0,15"/>

                <TextBlock Text="Место жительства:" Margin="0,0,0,5"/>
                <TextBox x:Name="POLF" Height="24" Margin="0,0,0,15"/>

                <!-- Телефоны отца -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Домашний телефон:" Margin="0,0,0,5"/>
                        <TextBlock Text="(при наличии)" FontSize="10" Foreground="Red" Margin="15,0,0,5"/>
                        <TextBox x:Name="HPF" Height="24"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Мобильный телефон:" Margin="0,0,0,5"/>
                        <TextBlock Text="(при наличии)" FontSize="10" Foreground="Red" Margin="15,0,0,5"/>
                        <TextBox x:Name="MPF" Height="24"/>
                    </StackPanel>
                </Grid>

                <CheckBox x:Name="CB2" Content="Настоящим подтверждаю, что персональные данные передаются третьим лицам" 
                     Margin="0,10,0,25" FontSize="12"/>

                <Button Click="Navigation" Content="Продолжить" Height="25" 
                   MinWidth="160" 
                   Margin="0,20,0,10" HorizontalAlignment="Right"
                   />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
